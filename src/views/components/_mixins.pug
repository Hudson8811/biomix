mixin breadcrumbs(paddingLeft=false,item1="", item2="", item3="", item4="", item5="")
	nav.breadcrumbs-wrap
	ul(class="breadcrumbs" + (paddingLeft==true?"":" breadcrumbs--pl0"))
		if(item1=="")
			li.breadcrumbs-item
				a.breadcrumbs-item-a(href="") Раздел

			li.breadcrumbs-item Раздел
		else
			li.breadcrumbs-item
				a.breadcrumbs-item-a(href="")
					=item1
			if(item2!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item2
			if(item3!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item3
			if(item4!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item4
			if(item5!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item5

mixin input(type, inputName, holder, label)
	if type === 'text' || type === 'phone' || type === 'email'
		input.input-text(type=type, name=inputName, placeholder=holder)
	if type === 'checkbox'
		label
			input.input-checkbox(type='checkbox', name=inputName)
			b
			p!=label
	if type === 'textarea'
		textarea(name=inputName, placeholder=holder)
